<h1>Add new article</h1>

<%= form_for(@page) do |f| %>
    <%= f.label :title, 'title'%><br>
    <%= f.text_field :title%>

    <%= f.label :body, style: "display: block"%><br>
    <%= f.text_area :body, rows: 30, style: 'width: 50%'%><br>

    <%= f.submit %>
<% end %>

<%= link_to 'Back', pages_path %>